<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <AssemblyName>DecoLimitLifter</AssemblyName>
    <RootNamespace>DecoLimitLifter</RootNamespace>
    <LangVersion>latest</LangVersion>
    <Nullable>disable</Nullable>
  </PropertyGroup>

  <!-- Reference game + BepInEx assemblies from your local install -->
  <ItemGroup>
    <!-- BepInEx core & Harmony -->
    <Reference Include="BepInEx">
      <HintPath>$(FTD_DIR)\BepInEx\core\BepInEx.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="0Harmony">
      <HintPath>$(FTD_DIR)\BepInEx\core\0Harmony.dll</HintPath>
      <Private>false</Private>
    </Reference>

    <!-- Game assemblies -->
    <Reference Include="Assembly-CSharp">
      <HintPath>$(FTD_DIR)\From_The_Depths_Data\Managed\Assembly-CSharp.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>$(FTD_DIR)\From_The_Depths_Data\Managed\UnityEngine.CoreModule.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- No BepInEx NuGets needed -->
  <ItemGroup>
    <!-- Keep this empty or add analyzers/utilities you actually use from nuget.org -->
  </ItemGroup>
</Project>
